<%= link_to event do %>
  <div id="<%= dom_id event %>" class="bg-red-100 hover:bg-red-200 px-4 py-1 flex-col rounded-lg my-3">
    <p class="my-5">
      <%= link_to event.name, event, method: :get, class: 'font-bold text-2xl' %>
    </p>

    <p class="my-1">
      <%= event.date %>
    </p>

    <p class="my-5">
      <strong class="block font-medium mb-1">Description:</strong>
      <%= event.description %>
    </p>

    <p class="my-5">
      <strong class="block font-medium mb-1">Location:</strong>
      <%= event.location %>
    </p>

      <p class="my-5">
      <strong class="block font-medium mb-1">Event Host:</strong>
      <%= link_to event.host.full_name, user_profile_path(event.host), class: 'hover:underline' %>
    </p>


  </div>
<% end %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
    <% if alert.present? %>
    <p class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg inline-block" id="alert"><%= alert %></p>
  <% end %>


  <% content_for :title, "Events" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl text-red-500">Upcoming</h1>
    <% if user_signed_in? %>
      <%= link_to "New Event", new_event_path, class: "rounded-lg py-3 px-5 bg-red-500 text-white block font-medium" %>
    <% end %>
  </div>

  <div id="events" class="min-w-full">
    <% @events.upcoming.each do |event| %>
      <%= render partial: "event_card", locals: { event: event } %>
    <% end %>
  </div>

  <h1 class="font-bold text-4xl text-red-400 mt-8">Missed</h1>
    <div id="events" class="min-w-full">
    <% @events.past.each do |event| %>
      <%= render partial: "event_card", locals: { event: event } %>
    <% end %>
  </div>

</div>

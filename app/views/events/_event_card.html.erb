
    <div id="<%= dom_id event %>" class="bg-red-100 hover:bg-red-200 px-4 py-4 rounded-lg my-3 content-center">

      <div class="flex justify-between content-center">
        <p class="my-0">
          <%= link_to event.name, event, method: :get, class: 'font-bold text-2xl' %> @
          <%= event.location %>
        </p>
        <p class="content-center">
          <%= event.date %>
        </p>
      </div>

      <p class="my-0">
        <strong class="block font-medium mb-1">by 
          <%= link_to event.host.full_name, profile_path(event.host), class: 'hover:underline' %>
        </strong>
      </p>

      <div class="my-2 inline-block">
        <%= event.description %>
      </div>

      <div class="my-1">
        <% if event.attendees.blank? %>
          <p class="text-gray-500">No Attendees yet</p>
        <% else %>
          <p><%= event.attendees.count %> attendees</p>
        <% end %>
      </div>

  </div>
